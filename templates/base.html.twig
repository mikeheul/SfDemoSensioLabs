<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="description" content="SfDemoSensioLabs">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}Welcome!{% endblock %}</title>
    
    <!-- Favicon SVG -->
    <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">
    
    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
    {% endblock %}

    {% block javascripts %}
        {{ encore_entry_script_tags('app') }}
    {% endblock %}
</head>
<body class="bg-gray-100 font-sans antialiased">

    {{ include('layout/_header.html.twig') }}

    <!-- Main content -->
    <main class="container mx-auto px-6 py-8">

        {% for type, messages in app.flashes %}
            {% for message in messages %}
                <div class="
                    {% if type == 'success' %}
                        bg-green-100 text-green-800 border-l-4 border-green-500
                    {% elseif type == 'error' %}
                        bg-red-100 text-red-800 border-l-4 border-red-500
                    {% elseif type == 'warning' %}
                        bg-yellow-100 text-yellow-800 border-l-4 border-yellow-500
                    {% elseif type == 'info' %}
                        bg-blue-100 text-blue-800 border-l-4 border-blue-500
                    {% endif %}
                    p-4 mb-4 rounded-lg shadow-md flex items-center
                ">
                    <span class="mr-2">
                        {% if type == 'success' %}
                            ✔️
                        {% elseif type == 'error' %}
                            ❌
                        {% elseif type == 'warning' %}
                            ⚠️
                        {% elseif type == 'info' %}
                            ℹ️
                        {% endif %}
                    </span>
                    <div>{{ message }}</div>
                </div>
            {% endfor %}
        {% endfor %}

        {% if not app.user %}
            <p class="text-lg text-gray-600 mb-4 text-center">Please register or login to access our trainings and courses.</p>
        {% endif %}

        {% block body %}{% endblock %}
    </main>
</body>
</html>
