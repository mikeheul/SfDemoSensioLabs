{% extends 'base.html.twig' %}

{% block title %}Profile{% endblock %}

{% block body %}
    <div class="container mx-auto p-4">
        <h1 class="text-4xl font-bold text-gray-800 mb-6">Profile</h1>

        <!-- Enrolled Trainings Section -->
        <div class="bg-white p-6 rounded-lg shadow-md">
            <h2 class="text-2xl font-semibold text-gray-700 mb-4">Enrolled Trainings</h2>

            {% if app.user.trainings is empty %}
                <p class="text-gray-500">You are not enrolled in any training yet.</p>
            {% else %}
                <ul class="space-y-3">
                    {% for training in app.user.trainings %}
                        <li class="flex items-center justify-between p-3 bg-gray-100 rounded-md hover:bg-indigo-50 transition duration-300">
                            <span class="text-md text-gray-800">{{ training.title }}</span>
                            <a href="{{ path('show_training', {'id': training.id}) }}" class="text-indigo-600 hover:text-indigo-800 text-sm">Details</a>
                        </li>
                    {% endfor %}
                </ul>
            {% endif %}
        </div>
    </div>
{% endblock %}
