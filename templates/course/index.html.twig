{% extends 'base.html.twig' %}

{% block title %}Courses List{% endblock %}

{% block body %}
    <div class="container mx-auto px-4 py-8">
        <h1 class="text-5xl font-bold text-gray-800 mb-8 flex items-center">
            Courses 
            <span class="ml-2 inline-block py-1 px-3 text-white bg-indigo-600 rounded-full text-lg">
                {{ courses | length }}
            </span>
        </h1>

        <div class="mb-6">
            {% include 'components/create_button.html.twig' with { 'route': 'new_course', 'label': 'Create New Course' } %}
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
            {% for course in courses %}
                {% include 'components/course_card.html.twig' %}
            {% endfor %}
        </div>
    </div>
{% endblock %}
