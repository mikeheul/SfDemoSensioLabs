{% extends 'base.html.twig' %}

{% block title %}Courses List{% endblock %}

{% block body %}
    <div class="container mx-auto px-4 py-8">
        <h1 class="text-5xl font-bold text-gray-800 mb-8">Courses</h1>

        <div class="mb-6">
            {% if app.user and is_granted("ROLE_ADMIN") %}
                <a href="{{ path('new_course') }}">
                    <button class="bg-indigo-600 text-white px-8 py-3 rounded-lg shadow-md hover:bg-indigo-700 transition duration-300 ease-in-out">
                        Create New Course
                    </button>
                </a>
            {% endif %}
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            {% for course in courses %}
                <div class="bg-white p-6 rounded-xl transition-all duration-300 ease-in-out flex flex-col justify-between">
                    <div>
                        <h2 class="text-3xl font-semibold text-gray-900 mb-3">
                            <a href="{{ path('show_course', {'id': course.id}) }}" class="text-indigo-600 hover:underline">{{ course.name }}</a>
                        </h2>
                        <p class="text-gray-600 mb-4">{{ course.description | slice(0, 150) }}...</p>
                    </div>
                    <div class="mt-4">
                        <a href="{{ path('show_course', {'id': course.id}) }}" class="text-indigo-500 hover:text-indigo-600">Read more</a>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
