{% extends 'base.html.twig' %}

{% block title %}Course Page{% endblock %}

{% block body %}
    <div class="container mx-auto px-6 py-8">
        <!-- Course Title -->
        <div class="mb-6">
            <h1 class="text-4xl font-semibold text-gray-800">{{ course.name }}</h1>
        </div>

        <!-- Course Description -->
        <div class="mt-4">
            <p class="text-lg text-gray-600">{{ course.description }}</p>
        </div>

        <div class="mt-6">
            <h2 class="text-2xl font-medium my-4">Trainings that included this course</h2>
            <div class="flex gap-4">
                {% for training in course.trainings %}
                    <div class="flex justify-center items-center h-[150px] w-[150px] p-3 bg-slate-300 rounded-md">
                        <p class="text-center">{{ training.title }}</p>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}
