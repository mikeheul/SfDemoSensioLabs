{% extends 'base.html.twig' %}

{% block title %}Notifications{% endblock %}
{% block meta_description %}
    <meta name="description" content="Notifications Page - List of all notifications.">
{% endblock %}

{% block body %}
    <div class="max-w-4xl mx-auto py-8 px-4">
        <h1 class="text-3xl font-semibold text-gray-800 mb-6">My Notifications</h1>

        {% if notifications is empty %}
            {# <div class="bg-green-100 border-l-4 border-green-500 text-green-700 p-4 mb-4 rounded-md"> #}
            <div class="">
                <p>No notifications</p>
            </div>
        {% else %}
            <div class="space-y-4">
                {% for notification in notifications %}
                    <div class="bg-white shadow-sm  p-4 rounded-lg flex justify-between items-center">
                        <div class="flex-1">
                            <p class="text-gray-800">{{ notification.message }}</p>
                            {# <small class="text-gray-500">{{ notification.createdAt | date('d/m/Y H:i') }}</small> #}
                        </div>
                        
                        {% if not notification.isRead %}
                            <div>
                                <a data-turbo="false" href="{{ path('mark_as_read', {'id': notification.id}) }}" 
                                    class="bg-blue-500 text-white py-1 px-3 rounded-full text-sm hover:bg-blue-600 transition-all duration-200">
                                    Mark As Read
                                </a>
                            </div>
                        {% endif %}
                    </div>
                {% endfor %}
            </div>
        {% endif %}
    </div>
{% endblock %}
