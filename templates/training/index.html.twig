{% extends 'base.html.twig' %}

{% block title %}Trainings List{% endblock %}

{% block body %}
    <div class="container max-w-7xl mx-auto py-8">
        <h1 class="text-5xl font-bold text-gray-800 mb-8 flex items-center">
            Trainings 
            <span class="ml-2 inline-block py-1 px-3 text-white bg-indigo-600 rounded-full text-lg">
                {{ trainings | length }}
            </span>
        </h1>

        <div class="mb-6">
            {% include 'components/create_button.html.twig' with { 'route': 'new_training', 'label': 'Create New Training' } %}
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
            {% for training in trainings %}
                {% include 'components/training_card.html.twig' %}
            {% endfor %}
        </div>    
        {{ knp_pagination_render(trainings) }}
    </div>
{% endblock %}
