{% extends 'base.html.twig' %}

{% block title %}Training Page{% endblock %}

{% block body %}
    <div class="container mx-auto px-6 py-8">
        <!-- Title and Description -->
        <div class="mb-6">
            <h1 class="text-4xl font-semibold text-gray-800">{{ training.title }}</h1>
            <p class="text-lg text-gray-600 mt-2">{{ training.description }}</p>
            <p class="text-xl font-bold text-indigo-600 mt-4">{{ training.price }} â‚¬</p>
        </div>

        <!-- Courses Section -->
        <div class="mt-8">
            <h2 class="text-2xl font-semibold text-gray-700">Scheduled Courses</h2>
            <ul class="mt-4 space-y-4">
                {% for course in training.courses %}
                    <li class="bg-white shadow-lg rounded-lg p-4 hover:bg-gray-50 transition duration-200">
                        <p class="text-lg text-blue-600 font-semibold">{{ course.name }}</p>
                        <p class="text-sm text-slate-500 mt-3">{{ course.description }}</p>
                    </li>
                {% endfor %}
            </ul>
        </div>
    </div>
{% endblock %}
