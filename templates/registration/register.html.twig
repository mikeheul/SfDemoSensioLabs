{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}
{% block meta_description %}
    <meta name="description" content="Create a new account.">
{% endblock %}

{% block body %}
    <div class="flex justify-center items-center bg-gray-100">
        <div class="w-full max-w-2xl bg-white p-8 rounded-lg shadow-lg">
            <h1 class="text-3xl font-semibold mb-6 text-center text-gray-800">{{ 'form_register.title' | trans }} </h1>

            <!-- Display Form Errors -->
            <div class="mb-4 text-red-500">
                {{ form_errors(registrationForm) }}
            </div>

            <!-- Start Form -->
            {{ form_start(registrationForm, {'attr': {'class': 'space-y-6'}}) }}
                
                <!-- Email Field -->
                <div class="space-y-2">
                    {{ form_row(registrationForm.email, {
                        label: 'form_register.email' | trans,
                        'attr': {
                            'class': 'w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500'
                        }
                    }) }}
                </div>
                
                <div class="flex flex-col md:flex-row gap-4">
                    <!-- First name / Last name Fields -->
                    <div class="space-y-2">
                        {{ form_row(registrationForm.firstName, {
                            label: 'form_register.firstName' | trans,
                            'attr': {
                                'class': 'w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500'
                            }
                        }) }}
                    </div>
                    <!-- Email Field -->
                    <div class="space-y-2">
                        {{ form_row(registrationForm.lastName, {
                            label: 'form_register.lastName' | trans,
                            'attr': {
                                'class': 'w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500'
                            }
                        }) }}
                    </div>
                </div>
                
                <!-- Password Field -->
                <div class="space-y-2">
                    {{ form_row(registrationForm.plainPassword, {
                        label: 'form_register.password' | trans,
                        'attr': {
                            'class': 'w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500'
                        }
                    }) }}
                </div>
                
                <!-- Terms Agreement -->
                <div class="space-y-2">
                    {{ form_row(registrationForm.agreeTerms, {
                        label: 'form_register.agree_terms' | trans,
                        'attr': {'class': 'inline-block text-gray-700 ml-2'}
                    }) }}
                </div>

                <!-- Submit Button -->
                <div class="mt-6">
                    <button type="submit" class="w-full bg-blue-500 text-white py-3 rounded-lg hover:bg-blue-600 focus:outline-none">
                        {{ 'form_register.submit' | trans}}
                    </button>
                </div>

            {{ form_end(registrationForm) }}
            
            <div class="mt-4 text-center">
                <p class="text-sm text-gray-600">Already have an account ? <a href="{{ path('app_login') }}" class="text-blue-500 hover:underline">Login here</a></p>
            </div>
        </div>
    </div>
{% endblock %}
