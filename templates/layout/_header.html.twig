<!-- Header with Navigation -->
<header class="bg-slate-600 text-white shadow-md">
    <div class="container mx-auto px-10 py-6">
        <nav class="flex justify-between items-center">

            <div>
                <a class="text-2xl font-bold text-white hover:text-indigo-200" href="{{ path('app_home') }}" alt="Logo">TrainingPlatform</a>
            </div>

            <div class="flex gap-5 items-center">
                <a href="{{ path('app_training') }}" class="text-md font-semibold hover:text-indigo-200">Trainings</a>
                <a href="{{ path('app_course') }}" class="text-md font-semibold hover:text-indigo-200">Courses</a>
                <a href="{{ path('external_api') }}" class="text-md font-semibold hover:text-indigo-200">API</a>
            </div>

            <div class="hidden lg:flex gap-5 items-center">
                {% if app.user %}
                    <span class="text-xs px-4 py-2 bg-slate-500 rounded-lg">
                        {% set roles = app.user.roles | filter(role => role != 'ROLE_USER') %}
                        {{ roles ? roles | join(', ') : 'No special roles' }}
                    </span>                    
                    <span class="text-md font-thin">
                        <a data-turbo="false" href="{{ path('app_profile') }}">{{ app.user.email }}</a>
                    </span>
                    
                    <div class="relative">
                        <a href="{{ path('app_notification') }}" class="text-white">
                            <i class="fas fa-bell text-2xl"></i>
                        </a>
                        {% if unread_notifications_count(app.user) > 0 %}
                            <span class="absolute -top-2 -right-3 bg-red-500 text-white text-xs font-semibold rounded-full w-5 h-5 flex items-center justify-center">
                                {{ unread_notifications_count(app.user) }}
                            </span>
                        {% endif %}
                    </div>

                    {% if is_granted('ROLE_ADMIN') %}
                        <a href="{{ path('admin') }}" class="text-md font-semibold hover:text-indigo-200">Admin</a>
                    {% endif %}

                    <a data-turbo="false" href="{{ path('app_logout') }}" class="text-md font-semibold hover:text-indigo-200"><i class="fa-solid fa-arrow-right-from-bracket"></i></a>
                    
                {% else %}
                    <a href="{{ path('app_register') }}" class="text-md font-semibold hover:text-indigo-200">Register</a>
                    <a href="{{ path('app_login') }}" class="text-md font-semibold hover:text-indigo-200">Login</a>
                {% endif %}
            </div>
        </nav>
    </div>
</header>